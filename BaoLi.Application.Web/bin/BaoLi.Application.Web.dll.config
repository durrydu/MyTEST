    <!--SSO 配置开始 姚栋-->
    <machineKey validationKey="3FF1E929BC0534950B0920A7B59FA698BD02DFE8" decryptionKey="280450BB36319B474C996B506A95AEDF9B51211B1D2B7A77" decryption="3DES" validation="SHA1" />
    <httpHandlers>
      <!-- 验证码图片的请求处理 -->
      <add verb="GET" path="ImageVerifier.axd" type="YANGO.SSO.WebSite.Controls.ImageVerifier, YANGO.SSO.Utility" />
      <!--退出系统的相关Handler-->
      <add path="wd_sso_logout.axd" verb="*" type="YANGO.SSO.NClient.SsoLogoutHttpHandler,YANGO.SSO.Agent" />
      <!--禁用或启用系统相关Handler-->
      <add path="updateIsForbidden.axd" verb="*" type="YANGO.SSO.NClient.SsoForbiddenSystemHttpHandler,YANGO.SSO.Agent" />
      <!--LocalModel登陆、验证、退出系统的相关Handler-->
      <add path="yango_sso_localmodel_login.axd" verb="*" type="YANGO.SSO.NClient.SsoLocalModelHttpHandler,YANGO.SSO.Agent" />
      <add path="yango_sso_localmodel_exit.axd" verb="*" type="YANGO.SSO.NClient.SsoLocalModelLogoutHttpHandler,YANGO.SSO.Agent" />
      <add path="VerifyCodeAndRememberPwd.axd" verb="*" type="YANGO.SSO.NClient.SsoLocalModelCodeAndPwdHttpHandler,YANGO.SSO.Agent" />
    </httpHandlers>
    <httpModules>
      <!--检查是否通过身份认证-->
      <add name="ClaimsPrincipalHttpModule" type="YANGO.SSO.NClient.ClaimsPrincipalHttpModule, YANGO.SSO.Agent" />
      <!--检查授权是否正确-->
      <add name="ClaimsAuthorizationHttpModule" type="YANGO.SSO.NClient.ClaimsAuthorizationHttpModule, YANGO.SSO.Agent" />
    </httpModules>
    <!--SSO 配置结束 姚栋-->
  </system.web>
  <!--SSO 配置 姚栋-->
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"></validation>

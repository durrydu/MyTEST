      <add name="ClaimsAuthorizationHttpModule" type="YANGO.SSO.NClient.ClaimsAuthorizationHttpModule, YANGO.SSO.Agent" />
    </modules>
    <defaultDocument>
      <files>
        <add value="ResetPwd.aspx" />
      </files>
    </defaultDocument>

@{;
ViewBag.Title = "岗位项目授权";
Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/scripts/plugins/lodash.min.js"></script>
<script>
    var keyValue = request('keyValue');
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 220.5);
            }, 200);
            e.stopPropagation();
        });
    }
    var authorizeIds = [];
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            url: "../../BaseManage/Base_ProjectInfo/GetProjectExcept?keyValue=" + keyValue,
            datatype: "json",
            height: $(window).height() - 220.5,
            autowidth: true,
            colModel: [
                { label: '主键', name: 'ProjectID', hidden: true, key: true },
                { label: '所属区域', name: 'CompanyName', index: 'CompanyName', width: 200, align: 'left', sortable: true },
                 { label: '城市', name: 'CityName', index: 'CityName', width: 100, align: 'left', sortable: true },
               { label: '项目名称', name: 'ProjecName', index: 'ProjecName', width: 200, align: 'left', sortable: true },
                //{ label: '创建时间', name: 'SyncTime', index: 'CreateDate', width: 100, align: 'left', sortable: true },
                //{ label: '创建用户', name: 'CreateUserName', index: 'CreateUserName', width: 100, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 20,
            rowList: [20, 50, 100, 9999],
            pager: "#gridPager",
            sortname: 'CompanyName',
            sortorder: 'asc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            //onSelectRow: function () {
            //    selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            //},
            //jqGrid中触发选中功能，将数据缓存在数组中
            onSelectAll: function (aRowids, status) {
                var _this = this;
                if (status) {
                    authorizeIds = _.union(authorizeIds, aRowids);
                } else {
                    authorizeIds = _.difference(authorizeIds, aRowids);
                }
            },
            beforeSelectRow: function (rowid, e) {
                var isPush = true;
                if (e.type == 'click') {
                    debugger
                    i = $.jgrid.getCellIndex($(e.target).closest('td')[0]),
                    cm = $gridTable.jqGrid('getGridParam', 'colModel');
                    var inputCk = $(e.target).closest('td').eq(0).find("input");
                    if (inputCk.length == 0) {

                        return;
                    }
                    isPush = inputCk.is(":checked")
                }
                var _this = this;
                var index = _.indexOf(authorizeIds, rowid);
                if (isPush) {
                    if (index == -1) {

                        authorizeIds.push(rowid);
                    }
                }
                else {
                    authorizeIds = _.pull(authorizeIds, rowid);

                }

                //if (index == -1) {

                //    authorizeIds.push(rowid);


                //}
                //else {
                //    authorizeIds = _.pull(authorizeIds, rowid);
                //}

            },
            gridComplete: function () {
                var _this = this;
                if (authorizeIds.length > 0) {
                    for (var i = 0; i < authorizeIds.length; i++) {

                        $(_this).jqGrid('setSelection', authorizeIds[i]);
                    }
                }
            }
        });

        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").val(),
                keyword: keyValue
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    function btn_add_all() {
        $.ConfirmAjax({
            msg: "请问您确认要给此岗位授权所有项目信息吗？",
            url: "../../AuthorizeManage/PermissionPost/SaveAuthorizeAndPostAll?keyValue=" + keyValue,
            param: { keyValue: keyValue },
            success: function (data) {
                top.frames["SetProject"].$('#gridTablet').trigger('reloadGrid');
                dialogClose();
            }
        })

    }
    //建立岗位和项目的关系
    function AcceptClick() {
        var projectIds = [];
        var projectNames = [];
        //获取多选到的id集合
        //var ids = $("#gridTable").jqGrid("getGridParam", "selarrrow");
        //遍历访问这个集合
        $(authorizeIds).each(function (index, id) {
            //由id获得对应数据行
            var row = $("#gridTable").jqGrid('getRowData', id);
            projectIds.push(row.ProjectID);
            projectNames.push(row.ProjecName);
        });
        if (projectIds.length == 0) {
            dialogAlert("请选择需要授权的项目！", 5);
            return false;
        }
        $.SaveForm({
            url: "../../AuthorizeManage/PermissionPost/SaveAuthorizeAndPost?keyValue=" + keyValue,
            param: { postId: keyValue, projectColumnIds: projectIds.join(','), projectColumnNames: projectNames.join(',') },
            loading: "正在保存数据...",
            success: function () {

                top.frames["SetProject"].$('#gridTablet').trigger('reloadGrid');
            }
        })


    }

</script>
<div class="titlePanel">

    <div class="title-search">
        <table>
            <tbody>
                <tr>
                    <td>
                        <input id="queryCondition" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                    </td>
                    <td style="padding-left: 5px;">
                        <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add-all" class="btn btn-default" onclick="btn_add_all()"><i class="fa fa-plus"></i>&nbsp;授权全部项目</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>   
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - $('.titlePanel').height() - 100);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - $('.titlePanel').height() - 70,
            url: "../../EcommerceContractManage/EcommerceProjectRelation/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'EcommerceProjectRelationID', name: 'EcommerceProjectRelationID', index: 'EcommerceProjectRelationID', width: 100, align: 'center', sortable: true, hidden: true },

                { label: '项目名称', name: 'ProjecName', index: 'ProjecName', width: 100, align: 'center', sortable: true },
                { label: '电商简称', name: 'EcommerceGroupName', index: 'EcommerceGroupName', width: 100, align: 'center', sortable: true },
                { label: '电商公司', name: 'EcommerceName', index: 'EcommerceName', width: 100, align: 'center', sortable: true },
                { label: '电商性质', name: 'EcommerceTypeName', index: 'EcommerceTypeName', width: 100, align: 'center', sortable: true },
                {
                    label: '合作开始时间', name: 'CooperateStartTime', index: 'CooperateStartTime', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue)
                    {
                       return  formatDate(cellvalue, 'yyyy-MM-dd')
                    }
                },
                {
                    label: '合作截止时间', name: 'CooperateEndTime', index: 'CooperateEndTime', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue) {
                        return formatDate(cellvalue, 'yyyy-MM-dd')
                    }
                },
                { label: '平台费率(%)', name: 'PlatformRate', index: 'PlatformRate', width: 100, align: 'center', sortable: true },
                { label: '经办人', name: 'Agent', index: 'Agent', width: 100, align: 'center', sortable: true },
                { label: '流水序号', name: 'Procinstid', index: 'Procinstid', width: 100, align: 'center', sortable: true,hidden:true },
                {
                    label: '审批状态', name: 'ApprovalState', index: 'ApprovalState', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvale, options, rowobject) {
                        if (cellvale == 1 && rowobject.Procinstid == null) {
                            
                            return "<a target='_blank' onclick='edit_a(\"" + rowobject.EcommerceProjectRelationID + "\")' style=\"cursor: pointer; color:#9933FF; \">草稿</a>"
                        }
                        else {
                            return "<a target='_blank' href='" + rowobject.url + "'  style=\"cursor: pointer; color:#9933FF; \">" + GetEnumDescription(cellvale, top.enumData.ApprovalStateEnumArray) + "</a>";
                        }
                    }
                },
                { label: '提交时间', name: 'CreateDate', index: 'CreateDate', width: 100, align: 'center', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                ProjecName: $("#ProjecName").val(),
                EcommerceGroupName: $("#EcommerceGroupName").val(),
                EcommerceName: $("#EcommerceName").val(),
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#ProjecName,#EcommerceGroupName').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //查看审批记录
    function btn_approval(Procinstid)
    {
        var procinstid = Procinstid;
    }
    //新增
    function btn_add() {
        //dialogOpen({
        //    id: 'Form',
        //    title: '添加T_EcommerceProjectRelation',
        //    url: '/EcommerceContractManage/EcommerceProjectRelation/Form',
        //    width: 'px',
        //    height: 'px',
        //    callBack: function (iframeId) {
        //        top.frames[iframeId].AcceptClick();
        //    }
        //});
        location.href = '/EcommerceContractManage/EcommerceProjectRelation/Form';
    }
    //编辑
    function btn_edit()
    {
        var keyValue = $("#gridTable").jqGridRowValue('EcommerceProjectRelationID');
        if (checkedRow(keyValue))
        {
            var state = $("#gridTable").jqGridRowValue('ApprovalState');
            var arr = state.split(">");
            var array = arr[1].split("<");
            if (array[0] == "草稿") {
                location.href = '/EcommerceContractManage/EcommerceProjectRelation/Form?keyValue=' + keyValue;
            }
            else
            {
                dialogMsg('只有草稿状态的数据允许被编辑！', 0);
            }
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $('#gridTable').jqGridRowValue('EcommerceProjectRelationID');
        if (checkedRow(keyValue)) {
            //dialogOpen({
            //    id: 'Form',
            //    title: '编辑T_EcommerceProjectRelation',
            //    url: '/EcommerceContractManage/EcommerceProjectRelation/Detail?keyValue=' + keyValue,
            //    width: 'px',
            //    height: 'px',
            //    callBack: function (iframeId) {
            //        top.frames[iframeId].AcceptClick();
            //    }
            //})
            location.href = '/EcommerceContractManage/EcommerceProjectRelation/Detail?keyValue=' + keyValue;
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('EcommerceProjectRelationID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../BaseManage/EcommerceProjectRelation/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的T_EcommerceProjectRelation！', 0);
        }
    }
    function edit_a(keyValue)
    {
        location.href = '/EcommerceContractManage/EcommerceProjectRelation/Form?keyValue='+keyValue;
    }
</script>

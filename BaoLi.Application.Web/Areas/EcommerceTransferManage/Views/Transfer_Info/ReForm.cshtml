        var ProjectID = request('ProjectID');
        var Transfer_Money = request('Transfer_Money');
        var EcommerceID = request('EcommerceID');
        var Remark = $("#Remark").val();
        $.SaveForm({
            url: '/EcommerceTransferManage/Transfer_Info/DeleteRemark?keyValue=' + keyValue + '&queryJson=' + Remark + "&ProjectID=" + ProjectID + "&Transfer_Money=" + Transfer_Money + "&EcommerceID=" + EcommerceID,
            success: function (data) {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
